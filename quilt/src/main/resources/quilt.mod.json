{
  "schema_version": 1,
  "quilt_loader": {
    "group": "com.illusivesoulworks.${mod_id}",
    "id": "${mod_id}",
    "version": "${version}",
    "intermediate_mappings": "net.fabricmc:intermediary",
    "entrypoints": {
      "init": [
        "com.illusivesoulworks.spectrelib.SpectreQuiltMod"
      ],
      "client_init": [
        "com.illusivesoulworks.spectrelib.SpectreClientQuiltMod"
      ],
      "pre_launch": [
        "com.illusivesoulworks.spectrelib.SpectrePreLaunchQuiltMod"
      ]
    },
    "depends": [
      {
        "id": "quilt_loader",
        "version": "*"
      },
      {
        "id": "quilt_base",
        "version": "*"
      },
      {
        "id": "minecraft",
        "version": "${quilt_mc_version_range}"
      },
      {
        "id": "java",
        "version": ">=17"
      }
    ],
    "metadata": {
      "name": "${mod_name}",
      "description": "${mod_description}",
      "contributors": {
        "${mod_author}": "Owner"
      },
      "license": "${license}"
    }
  },
  "mixin": [
    "spectrelib.mixins.json"
  ],
  "minecraft": {
    "environment": "*"
  }
}
